<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Add a review</h1>
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: ["0", "1", "2", "3", "4", "5"] %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
